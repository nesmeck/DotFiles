	feh -rSfilename -g 300x300 ~/Dropbox/Shit
# Abrir feh en ~/Dropbox/FUN
super + alt + h
	feh -rSfilename -g 300x300 ~/Dropbox/FUN
# Algo poderoso :P
super + alt + c
	$HOME/.shit/imgs.sh

# Recargar polybar
super + ctrl + alt + p
	$HOME/.config/polybar/launch.sh &
